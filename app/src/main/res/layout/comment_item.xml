<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#ADA1A1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/res_commentitem_pro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"

        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res_commentitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="사용자"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/res_commentitem_pro"
        app:layout_constraintTop_toTopOf="@id/res_commentitem_pro" />

    <TextView
        android:id="@+id/res_commentitem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="2000-00-00-"
        android:textColor="#ADA1A1"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/res_commentitem_name"

        app:layout_constraintLeft_toRightOf="@id/res_commentitem_name" />

    <TextView
        android:id="@+id/res_commentitem_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="이 집 맛집이네요 한번씩 가보세요^^"
        app:layout_constraintBottom_toBottomOf="@id/res_commentitem_pro"

        app:layout_constraintLeft_toLeftOf="@id/res_commentitem_name" />


</androidx.constraintlayout.widget.ConstraintLayout>